{
  "name": "sitmpcz/saml",
  "type": "library",
  "minimum-stability": "stable",
  "description": "Integration OneloginSAML IdP to Nette",
  "keywords": [
    "nette",
    "php-saml"
  ],
  "require": {
    "php": ">=8.1",
    "nette/di": "^2.4.7 || ^3.0",
    "nette/application": "^3.2 || ^4.0",
    "onelogin/php-saml": "^4.0"
  },
  "require-dev": {
    "nette/tester": "@dev",
    "nette/application": "@dev",
    "tracy/tracy": "@dev"
  },
  "autoload": {
    "classmap": ["src/"]
  },
  "config": {
    "allow-plugins": {
      "simplesamlphp/composer-xmlprovider-installer": true,
      "simplesamlphp/composer-module-installer": true
    }
  }
}
